<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/report_barrier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/bt_report"
            android:text="@string/report_barrier"
            android:textColor="@color/accent" />

        <Button
            android:id="@+id/report_radar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/bt_report"
            android:text="@string/report_radar"
            android:textColor="@color/accent" />
    </LinearLayout>

    <Button
        android:id="@+id/advanced_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_report"
        android:text="@string/advance_report"
        android:textColor="@color/accent" />
</LinearLayout>